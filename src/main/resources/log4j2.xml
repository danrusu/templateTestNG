<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Properties>
        <Property name="LOG_ROOT">logs</Property>
        <Property name="LOG_MESSAGE_PATTERN">[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n</Property>
    </Properties>

    <Appenders>

        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_MESSAGE_PATTERN}"/>
        </Console>

        <RollingFile name="fileLogger"
                     fileName="${LOG_ROOT}/info.log"
                     filePattern="${LOG_ROOT}/info_%d{yyyy_MM_dd_HH_mm_ss}.log">

            <PatternLayout>
                <pattern>${LOG_MESSAGE_PATTERN}</pattern>
            </PatternLayout>

            <Policies>
                <OnStartupTriggeringPolicy/>
            </Policies>

        </RollingFile>

    </Appenders>

    <Loggers>

    <Root level="ALL">
            <AppenderRef ref="console" level="ALL"/>
            <AppenderRef ref="fileLogger" level="ALL"/>
        </Root>

    </Loggers>

</Configuration>